    "//${llvm_root}llvm/lib/CodeGen",
    "//${llvm_root}llvm/lib/MC",
    "//${llvm_root}llvm/lib/MC/MCParser",
    "//${llvm_root}llvm/lib/Support",
    "//${llvm_root}llvm/lib/Target/AMDGPU/MCTargetDesc",
    "//${llvm_root}llvm/lib/Target/AMDGPU/TargetInfo",
    "//${llvm_root}llvm/lib/Target/AMDGPU/Utils",
    "//${llvm_root}llvm/lib/TargetParser",
  ]
  include_dirs = [ ".." ]
  sources = [ "AMDGPUAsmParser.cpp" ]
}
